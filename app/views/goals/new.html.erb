<div class="items-sell-contents">
  <header class="items-sell-header">
    
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">目標を設定</h2>
    <%= form_with model: @goal, url: "/goals", local: true do |f| %>

    <%# エラーメッセージ表示 %>
    <%= render 'shared/error_messages', model: f.object %>


    <%# 目標内容の設定 %>
    <div class="new-items">
      <div class="weight-bold-text">
        目標タイトル
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"目標（必須 20文字まで)", maxlength:"20" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          目標の内容
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
      <div class='form-text-wrap'>
      <label class="form-text">目標期日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :deadline,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2020,
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    </div>
    <%# /目標内容の設定 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "目標設定する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>
</div>
