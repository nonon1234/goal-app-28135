<%= render "shared/second-header"%>

<%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      サインイン
    </h1>
  </div>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </label>
    </div>
  </div>
  
  <div class="login-btn">
    <%= f.submit "Log in", class:"login-red-btn" %>
    <%= link_to '新規登録', new_user_registration_path, class: "new-registration-btn" %>
  </div>

</div>
<% end %>



<%= render "shared/footer"%>