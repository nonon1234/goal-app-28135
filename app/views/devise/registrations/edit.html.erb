<%= render "shared/header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新規登録
    </h1>
  </div>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>アイコン画像</label>
    </div>
    <%= f.file_field :image, id:"employee-icon", class:"employee-icon-text"%>
  </div>
  
  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>氏名</label>
    </div>
    <div class="input-name-wrap">
      <%= f.text_field :last_name, class:"input-name", placeholder:"山田", maxlength:"5" %>
      <%= f.text_field :first_name, class:"input-name", placeholder:"太郎", maxlength:"5" %>
    </div>
  </div>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>社員番号</label>
    </div>
    <%= f.text_field :employee_number, class:"input-number", placeholder:"0000", maxlength:"4" %>
  </div>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>所属部署</label>
    </div>
    <%= f.collection_select(:division_id, Division.all, :id, :name, {}, {class:"select-box", id:"division_id"}) %>
  </div>

  <div class='form-group'>
    <div class='form-text-wrap'>
      <label class='form-text'>役職</label>
    </div>
    <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {class:"select-box", id:"position_id"}) %>
  </div>

   <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation,  class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <%# エラーメッセージ表示 %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class='register-btn'>
    <%= f.submit "社員登録", class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer"%>
