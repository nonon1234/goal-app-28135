<%= render "shared/header" %>

<%# 社員目標一覧 %>
<div class='employee-main'>
  <% @users.each do |user| %>
    <div class='user-object'>
      <div class='user-header'>
        <div class='user-icon'>
        </div>
        <div class='user-info'>
          <h3 class='user-header-number'>
            <%= user.employee_number %>
          </h3>
          <h1 class='user-header-name'>
            <%= user.last_name %>
            <%= user.first_name %>
          </h1>
          <h3 class='user-header-division'>
            <%= user.division.name %>
            <%= user.position.name %>
          </h3>
        </div>
      </div>
      <div class='line'></div>
      <div class='user-footer'>
        <div class='user-goal-title'>
          目標タイトル
        </div>
        <div class='user-goal-info'>
          あああああああああああああああああああああああああ<br>
          あああああああああああああああああああああああああ<br>
          あいうえおかきくけこ
        </div>
        <div class='user-goal-progress'>
          進捗：28%
        </div>
        <div class='user-goal-deadline'>
          期日：2021-04-01
        </div>
      </div>

    </div>
  <% end %>
</div>

<%= render "shared/footer" %>